<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:animationCache="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@anim/card_animation"
    app:cardBackgroundColor="#000"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearmainbg"
        android:backgroundTint="@color/brown_khaad"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeImageUserIvId"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="center"
            android:src="@drawable/fertilizer" />

        <TextView

            android:id="@+id/homeProductTitleUserTvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Suit Plum EA-20-177"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#fff"
            android:textStyle="italic"
            android:typeface="serif" />

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="2dp"-->
        <!--            android:layout_marginLeft="2dp"-->
        <!--            android:layout_marginTop="5dp"-->
        <!--            android:layout_marginRight="2dp"-->
        <!--            android:background="#ECEAEA" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/golden"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/homeBrandUserTvId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="end"
                android:text="Brand"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000"

                android:typeface="serif" />

            <TextView
                android:id="@+id/homePriceUserTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="end"
                android:text="PKR 2,990"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#000"
                android:typeface="serif" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>