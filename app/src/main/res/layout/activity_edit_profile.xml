<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/backgroundview">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/editProfileImageId"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_baseline_person_24" />

        <Button
            android:id="@+id/editPhotoBtnId"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:background="@drawable/btn_design_next"
            android:drawableEnd="@drawable/ic_baseline_edit_24"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Edit Photo"
            android:textSize="12sp" />

        <Button
            android:id="@+id/saveImageBtnId"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="@drawable/btn_design_next"
            android:enabled="false"
            android:text="Save"
            android:textColor="#fff" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/goToPersonalInfoBtnId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="#fff"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:shadowColor="#000"
            android:paddingEnd="20dp"
            android:shadowDy="@integer/config_navAnimTime"
            android:shadowRadius="10"
            android:text="Personal Info"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/goToAddressInfoBtnId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="#fff"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:shadowColor="#000"
            android:shadowDy="@integer/config_navAnimTime"
            android:paddingEnd="20dp"
            android:shadowRadius="10"
            android:text="Address Info"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/goToChangePasswordBtnId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingEnd="20dp"
            android:layout_margin="10dp"
            android:background="#fff"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:gravity="start|center"
            android:paddingStart="10dp"
            android:shadowColor="#000"
            android:shadowDy="@integer/config_navAnimTime"
            android:shadowRadius="10"
            android:text="Change Password"
            android:textAllCaps="false"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>