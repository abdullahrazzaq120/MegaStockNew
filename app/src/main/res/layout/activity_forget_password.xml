<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.ForgetPasswordActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="We will send recovery password to this email"
        android:textColor="#000" />

    <EditText
        android:id="@+id/recoverEmailId"
        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Enter your email here"
        android:inputType="textEmailAddress"
        android:paddingLeft="30dp" />


    <Button
        android:id="@+id/forget_password_btnId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:background="@drawable/btn_design_next"
        android:gravity="center"
        android:text="Send"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp" />

</LinearLayout>